{
    "_meta": {
        "card_id": "high_volatility",
        "card_name": "⚡ 高波動劇烈卡",
        "description": "適用於高波動市場，小倉位、寬止損、抓大波段",
        "version": "1.0",
        "created_at": "2025-01-10",
        "market_condition": "高波動",
        "risk_level": "high",
        "expected_win_rate": 0.40,
        "tags": ["volatile", "high-risk", "big-move"]
    },

    "_extends": "base_default",

    "basic": {
        "leverage": 25,
        "leverage_max": 30,
        "position_size_usdt": 60.0
    },

    "targets_and_stops": {
        "target_profit_pct": 0.80,
        "target_profit_min_pct": 0.50,
        "target_profit_max_pct": 1.50,
        "stop_loss_pct": 0.40,
        "stop_loss_max_pct": 0.60,
        "early_stop_grace_sec": 8.0,
        "noise_stop_sigma": 4.0,
        "max_hold_minutes": 60.0,
        "max_hold_max_minutes": 120.0
    },

    "profit_lock": {
        "use_n_lock_n": true,
        "n_lock_n_threshold": 2.0,
        "n_lock_n_buffer": 0.5,
        "profit_lock_stages": [
            [-999.0, -2.0, -2.0],
            [-2.0, 0.0, -1.5],
            [0.0, 1.0, -1.0],
            [1.0, 2.0, 0.0],
            [2.0, 4.0, 1.0],
            [4.0, 6.0, 2.5],
            [6.0, 10.0, 4.0],
            [10.0, 999.0, 7.0]
        ]
    },

    "signal_quality": {
        "min_probability": 0.80,
        "min_confidence": 0.70,
        "signal_confirm_seconds": 3,
        "min_signal_advantage": 0.25
    },

    "six_dim_system": {
        "six_dim_alignment_threshold": 8,
        "six_dim_min_score_to_trade": 10,
        "warmup_seconds": 60.0,
        "require_momentum_confirm": true
    },

    "momentum_line": {
        "momentum_long_threshold": 0.05,
        "momentum_short_threshold": -0.05,
        "momentum_strong_threshold": 0.15
    },

    "whale_detection": {
        "whale_alert_threshold_usdt": 50000,
        "whale_emergency_threshold_usdt": 200000
    },

    "price_spike": {
        "price_spike_threshold_pct": 0.50
    },

    "risk_control": {
        "max_daily_trades": 5,
        "max_daily_loss_usdt": 150.0,
        "max_consecutive_losses": 1,
        "consecutive_loss_cooldown_min": 45
    }
}
