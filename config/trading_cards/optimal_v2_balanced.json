        "target_profit_pct": 1.5,
        "target_profit_min_pct": 1.0,
        "target_profit_max_pct": 2.5,
        "stop_loss_pct": 0.6,
        "stop_loss_min_pct": 0.4,
        "stop_loss_max_pct": 0.8,
        "max_hold_minutes": 15.0,
        "max_hold_min_minutes": 5.0,
        "max_hold_max_minutes": 30.0,
        "_risk_reward": "2.5:1 (1.5% / 0.6%)"
    },

    "profit_lock": {
        "use_n_lock_n": true,
        "n_lock_n_threshold": 0.5,
        "n_lock_n_buffer": 0.15,
        "use_midpoint_lock": true,
        "midpoint_ratio": 0.7,
        "profit_lock_stages": [
            [-999.0, -0.3, -0.6],
