        "design_theory": {
            "base": "v5 隨機進場 + 輕度信號過濾",
            "core_idea": "不限制交易間隔，讓信號系統自然過濾壞機會",
            "signal_filter": "4分最低門檻 (極寬鬆，只過濾明顯反向信號)",
            "risk_reward": "2.5:1 (v5 的高風報比)",
            "expected_frequency": "自然形成 500-1000 次/天",
            "target_scenario": "勝率比隨機高 5-10%，抵消滑點成本"
        },
        "math_expectation": {
            "paper_mode": {
                "win_rate": "60%",
                "avg_win": "+1.5%",
                "avg_loss": "-0.6%",
                "expected_per_trade": "+0.66%"
            },
            "sync_mode": {
                "win_rate": "58%",
                "avg_win": "+1.42%",
                "avg_loss": "-0.68%",
                "expected_per_trade": "+0.54%",
                "100_trades_profit": "$5.38 per 10U"
            }
        }
    },
