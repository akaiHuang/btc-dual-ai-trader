    "trading_mode": {
        "paper_mode": true,
        "reverse_mode": false,
        "contextual_mode": true,
        "strategy_card_enabled": true,
        "random_entry_mode": false,
        "_comment": "非隨機進場，使用信號過濾"
    },

    "pre_entry": {
        "pre_entry_mode": false,
        "pre_entry_threshold": 0.50,
        "pre_entry_cancel_threshold": 0.30,
        "pre_entry_timeout_sec": 30.0,
        "pre_entry_price_offset": 5.0,
